# Database
# Use the same port as defined in root .env (POSTGRES_PORT) for local development
# For production, adjust the host and port according to your setup
DATABASE_URL="postgresql://dentista:dentista123@localhost:5435/dentista_db?schema=public"

# Redis
# Use the same port as defined in root .env (REDIS_PORT) for local development
# For production, adjust the host and port according to your setup
REDIS_HOST=localhost
REDIS_PORT=6381

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Application
PORT=3000
NODE_ENV=development

# Frontend URL (used for password reset emails, OAuth callbacks, CORS)
# For local: http://localhost:3001
# For production: https://yourdomain.com or http://your-server-ip:port
FRONTEND_URL=http://localhost:3001

# CORS
# Can use comma-separated list for multiple origins
CORS_ORIGIN=http://localhost:3001

# OAuth - Google
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# OAuth - Apple
APPLE_CLIENT_ID=your-apple-client-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY_PATH=./keys/apple-private-key.p8
APPLE_CALLBACK_URL=http://localhost:3000/api/auth/apple/callback

# OAuth - Microsoft
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_CALLBACK_URL=http://localhost:3000/api/auth/microsoft/callback
